<%= form_with(model: user, class: 'userform'+classnum) do |form|%>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"+classnum>
    <%= form.label :loginname %>
    <%= form.text_field :loginname, id: :user_loginname,:value => '', class: 'myloginname'+classnum%>
  </div>

  <div class="field"+classnum>
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password, class: 'mypassword'+classnum %>
  </div>

  <div class="field"+classnum>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation %>
  </div>

  <div class="actions"+classnum>
    <%= form.submit %>
  </div>
<% end %>
